# Production Environment Configuration
# Copy this file to .env and update values for production deployment

# ============================================================================
# REQUIRED - Must be set before deployment
# ============================================================================

# Anthropic API Key (required)
ANTHROPIC_API_KEY=

# ============================================================================
# API Configuration
# ============================================================================

# API server settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS settings (comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================================================
# Model Configuration
# ============================================================================

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-20250514

# Maximum tokens for analysis
MAX_TOKENS=4096

# Temperature for LLM responses
LLM_TEMPERATURE=0.1

# ============================================================================
# Vector Database & Embeddings
# ============================================================================

# ChromaDB persistence directory
CHROMA_PERSIST_DIRECTORY=/app/data/vector_db

# Embedding model for semantic search
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Number of documents to retrieve for RAG
RAG_TOP_K=5

# ============================================================================
# Scoring Configuration
# ============================================================================

# Weight distribution between rule engine and LLM
RULE_ENGINE_BASE_WEIGHT=0.6
LLM_ANALYSIS_BASE_WEIGHT=0.4

# Confidence thresholds
HIGH_CONFIDENCE_THRESHOLD=0.85
LOW_CONFIDENCE_THRESHOLD=0.5

# ============================================================================
# Guardrails Configuration
# ============================================================================

# Enable hallucination detection
ENABLE_HALLUCINATION_GUARDRAILS=true

# Minimum grounding ratio for claims
MIN_GROUNDING_RATIO=0.7

# Maximum confidence penalty for hedging language
MAX_HEDGING_PENALTY=0.3

# ============================================================================
# Logging & Monitoring
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=json

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# Security
# ============================================================================

# API key for authentication (optional, for production use)
# API_AUTH_KEY=

# Enable HTTPS redirect
FORCE_HTTPS=true
